<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.taskmanage.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>taskinsert</servlet-name>
		<servlet-class>com.taskmanage.TaskServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>taskinsert</servlet-name>
		<url-pattern>/taskinsert</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>userinsert</servlet-name>
		<servlet-class>com.taskmanage.UserInsertServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userinsert</servlet-name>
		<url-pattern>/userinsert</url-pattern>
	</servlet-mapping>
	
	
	<!-- get all task -->
	
	<servlet>
		<servlet-name>getalltask</servlet-name>
		<servlet-class>com.taskmanage.GetAllTaskSeverlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getalltask</servlet-name>
		<url-pattern>/getalltask</url-pattern>
	</servlet-mapping>
	
	
		<!-- get all employees -->
	
	<servlet>
		<servlet-name>getAllEmployees</servlet-name>
		<servlet-class>com.taskmanage.getAllEmployeeSeverlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getAllEmployees</servlet-name>
		<url-pattern>/getallemployee</url-pattern>
	</servlet-mapping>
	
		<!-- update task -->
	
	<servlet>
		<servlet-name>update</servlet-name>
		<servlet-class>com.taskmanage.UpdateTaskServelet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update</servlet-name>
		<url-pattern>/updatetask</url-pattern>
	</servlet-mapping>
	
	
	
	
	
	
	
	
	
	
	

</web-app>